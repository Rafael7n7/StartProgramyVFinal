<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="1dp"
    android:background="#fff"
    android:id="@+id/llGeneral_listEmp">

    <ImageView
        android:id="@+id/ivCompany"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:id="@+id/llDetalhes"
        android:gravity="center">
        <TextView
            android:id="@+id/tvCompany_Emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nome empresa"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvCompany_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição" />
        <TextView
            android:id="@+id/tvCompany_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:text="   Telefone"
            android:drawableLeft="@mipmap/telefone_emp"
            android:layout_gravity="left"/>
    </LinearLayout>

</LinearLayout>